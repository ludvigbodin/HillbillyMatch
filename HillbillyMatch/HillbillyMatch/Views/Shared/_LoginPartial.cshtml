@using Microsoft.AspNet.Identity
<script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>



@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink(HillbillyMatch.International.AppResources.YourPage, "Index", "Profile")
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">@HillbillyMatch.International.AppResources.LogOut</a></li>
    </ul>
    <div class="nav navbar-nav navbar-right">
        <a class="btn btn-xs glyphicon glyphicon-heart showRequests" onclick="showDivWithRequests()" href="#" title="Requests" style="padding: 10px 14px 11px; font-size: 20px;"></a>
        <div id="myDropdown" class="requestDiv" style="display: none;">

        </div>
    </div>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(HillbillyMatch.International.AppResources.Register, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink(HillbillyMatch.International.AppResources.Login, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
@{ 
    if (Request.IsAuthenticated)
    {
        @Scripts.Render("~/Scripts/layout-script/layout.js");
    }
}

