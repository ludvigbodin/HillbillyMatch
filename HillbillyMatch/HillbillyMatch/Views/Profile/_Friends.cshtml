@model HillbillyMatch.Models.FriendIncludeCategoryViewModel


<h3>@HillbillyMatch.International.AppResources.Favorites</h3>
<ul>
    @foreach (var item in Model.FavoriteFriends)
    {
        <li href="#" class="list-group-item text-left">
            @{
                var imgSrc = "";
                if (item.Image != null)
                {
                    var base64 = Convert.ToBase64String(item.Image);
                    imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                }
                else
                {
                    imgSrc = "/Content/Images/noimage.jpg";
                }
                <img class="img-thumbnail" src="@imgSrc" alt="No image" width="75" height="75" style="border-radius: 50px;" />
            }
            <label class="name">
                @Html.ActionLink(item.Name, "UserProfile", "Profile", new { id = item.UserId }, null)
            </label>
            <label class="pull-right" style="margin-top: 15px;">
                <a class="btn btn-xs glyphicon glyphicon-star favoriteTag" href="#" title="Remove favorite" style="padding: 9px 14px 11px; font-size: 20px;" data-post-id="@item.FriendId"></a>
                <a class="btn btn-xs glyphicon glyphicon-trash deleteFriend" href="#" title="Delete" style="padding: 9px 14px 11px; font-size: 20px;" data-post-id="@item.FriendId"></a>
            </label>
        </li>
                }
</ul>
<hr />

